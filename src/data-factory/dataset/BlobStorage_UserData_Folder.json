{
	"name": "BlobStorage_UserData_Folder",
	"properties": {
		"linkedServiceName": {
			"referenceName": "BlobStorage_UserOutput",
			"type": "LinkedServiceReference"
		},
		"parameters": {
			"UserEmailAddress": {
				"type": "String"
			},
			"FileName": {
				"type": "String",
				"defaultValue": "user-profile.csv"
			}
		},
		"type": "AzureBlob",
		"typeProperties": {
			"format": {
				"type": "TextFormat",
				"columnDelimiter": ",",
				"rowDelimiter": "",
				"nullValue": "\\N",
				"treatEmptyAsNull": true,
				"skipLineCount": 0,
				"firstRowAsHeader": false
			},
			"fileName": {
				"value": "@concat('/', dataset().FileName)",
				"type": "Expression"
			},
			"folderPath": {
				"value": "@concat('user-data', toLower(dataset().UserEmailAddress))",
				"type": "Expression"
			}
		}
	},
	"type": "Microsoft.DataFactory/factories/datasets"
}