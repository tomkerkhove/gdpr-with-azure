{
	"name": "BlobStorage_UserData_Folder",
	"properties": {
		"linkedServiceName": {
			"referenceName": "BlobStorage_UserOutput",
			"type": "LinkedServiceReference"
		},
		"parameters": {
			"UserEmailAddress": {
				"type": "String"
			},
			"FileName": {
				"type": "String",
				"defaultValue": "user-profile.csv"
			}
		},
		"folder": {
			"name": "User Data"
		},
		"type": "AzureBlob",
		"typeProperties": {
			"fileName": {
				"value": "@concat('/', dataset().FileName)",
				"type": "Expression"
			},
			"folderPath": {
				"value": "@concat('user-data', toLower(dataset().UserEmailAddress))",
				"type": "Expression"
			}
		}
	},
	"type": "Microsoft.DataFactory/factories/datasets"
}